{
  "version": 2,
  "buildCommand": "npm run build:server && npm run build:client",
  "outputDirectory": "client/.next",
  "framework": "nextjs",
  "installCommand": "npm install",
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 30,
      "includeFiles": "server/dist/**"
    }
  },
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api"
    },
    {
      "source": "/api/:path*",
      "destination": "/api"
    }
  ]
}
